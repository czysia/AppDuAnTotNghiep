<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white">

        <ImageView
            android:id="@+id/imgHamburger"
            android:layout_width="@dimen/dp_48"
            android:layout_height="48dp"
            android:padding="@dimen/dp_12"
            android:src="@mipmap/ic_hambuger"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imgCart"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:padding="@dimen/dp_12"
            android:src="@mipmap/ic_cart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/main_home"
            android:textColor="@color/main_color"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/imgCart"
            app:layout_constraintEnd_toStartOf="@id/imgSearch"
            app:layout_constraintStart_toEndOf="@id/imgHamburger"
            app:layout_constraintTop_toTopOf="@id/imgCart" />

        <ImageView
            android:id="@+id/imgSearch"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:padding="@dimen/dp_12"
            android:src="@mipmap/ic_search"
            app:layout_constraintBottom_toBottomOf="@id/imgCart"
            app:layout_constraintEnd_toStartOf="@id/imgCart"
            app:layout_constraintTop_toTopOf="@id/imgCart" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>